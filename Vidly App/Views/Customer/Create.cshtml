@model Vidly_App.Models.ViewModels.NewFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="form-group">
    @using (Html.BeginForm("Create","Customer"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth)
            @Html.TextBoxFor(m => m.DateOfBirth,"{0:dd/MMM/yyyy}", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.membershipTypesId)
            @Html.DropDownListFor(m => m.membershipTypesId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select Membership",new { @class = "form-control" })
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.IsSubcribed) Subscribed To newsLetter
            </label>
           
        </div>
        <button type="submit" class="btn btn-primary"> Submit</button>
        @Html.HiddenFor(n=>n.Id)
    }
</div>

